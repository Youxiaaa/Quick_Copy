{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "R&C TodoList",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/todo.ico",
      "menuOnLeftClick": false,
      "iconAsTemplate": false
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.youxiaaa.todo-list",
      "icon": [
        "icons/todo.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "skipTaskbar": true,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "title": "R&C Todo List",
        "width": 300,
        "height": 400,
        "visible": false
      }
    ]
  }
}
